[user]
  name = Gusakov Nikita
  email = dev@nkt.me
[apply]
  whitespace = fix
[push]
  default = upstream
[color]
  ui = true
[merge]
  log = true
[alias]
  c = commit
  ca = !git add -A && git commit -av
  tags = tag -l
  b = branch
  r = remote
  go = checkout -b
  co = checkout
  st = status
  s = status --short
  aa = add --all
  undo = reset --soft HEAD^
  l = log --pretty=oneline -n 20 --graph --abbrev-commit
  hist = log --graph --all --format=format:'%C(bold blue)%h%C(reset) — %C(bold green)(%ar)%C(reset) %C(black)%s%C(reset) %C(bold white)— %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
[core]
  excludesfile = ~/.gitignore_global
  trustctime = false
